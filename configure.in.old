AC_INIT(txt2pdbdoc.c)
AM_INIT_AUTOMAKE(txt2pdbdoc,1.4.4)
AC_ARG_PROGRAM

dnl Check for programs.
CFLAGS="-O2"
AC_PROG_CC
AC_PROG_INSTALL
AC_PROG_MAKE_SET
AC_PATH_PROG(PERL,perl)

dnl Check for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS(time.h,,
  [AC_MSG_WARN(time.h not found; dates will be zerod)]
)
AC_CHECK_HEADERS(netinet/in.h stdlib.h string.h,,
  [AC_MSG_ERROR(missing required header)]
)

dnl Check for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_CHECK_SIZEOF(unsigned short)
AC_CHECK_SIZEOF(unsigned int)
AC_CHECK_SIZEOF(unsigned long)

dnl Check for library functions.
AC_FUNC_MEMCMP
AC_CHECK_FUNCS(getopt,,
  [AC_MSG_ERROR(missing required function)]
)

AC_OUTPUT(Makefile html2pdbtxt pdbtxt2html,
  [chmod +x html2pdbtxt pdbtxt2html]
)
